<%- include('./partials/header') %>
    <div class="row mb-3 border-bottom">
        <h2 style="font-family: monospace;">Project</h2>
    </div>
    <h3 style="font-family: monospace;">Filter</h3>

    <form action="" method="GET" class="">
        <input type="hidden" name="page" value="1">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <input class="form-check-input" type="checkbox" id="checkId" name="checkId">ID
            </div>
            <div class="col-sm-8">
                <input class="form-control" type="text" placeholder="ID ..." aria-label="default input example"
                    name="id">
            </div>
        </div>
        <div class="row my-3">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <input class="form-check-input" type="checkbox" id="checkName" name="checkName">Name
            </div>
            <div class="col-sm-8">
                <input class="form-control" type="text" placeholder="Name ..." aria-label="default input example"
                    name="pnama">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <input class="form-check-input" type="checkbox" id="checkMember" name="checkMember">Member
            </div>
            <div class="col-sm-8">
                <select class="form-select ;" aria-label="Default select example">
                    <option selected hidden>Choose The Member ..</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <input class="btn btn-primary" type="submit" value="Search">
            </div>
            <div class="col-sm-2">
                <a href="#" class="btn btn-danger">Reset</a>
            </div>
        </div>
    </form>

    <form action="">
        <h3 style="font-family: monospace;">Options</h3>

         <div class="row mb-3">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <label for="position">Position
            </div>
            <div class="col-sm-8">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="idOpt" id="idOpt"  >
                    <label class="form-check-label" for="idOpt">
                        ID
                    </label>
                </div>
                <div class="col-sm-8">
                    <input class="form-check-input" type="checkbox" name="nameOpt" id="nameOpt">
                    <label class="form-check-label" for="nameOpt">
                       Name
                    </label>
                </div>
                <input class="form-check-input" type="checkbox" name="memOpt" id="memOpt">
                <label class="form-check-label" for="memOpt">
                   Members
                </label>
            </div>
        </div>




    </form>

    <form action="">
        <table class="table table-dark table-stripped">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Members</th>
                <th>Action</th>
            </tr>
            <% data.forEach((item)=>{ %>
                <tr>
                    <td>
                        <%= item.projectid %>
                    </td>
                    <td>
                        <%= item.pname %>
                    </td>
                    <td>
                        <%= item.Members %>
                    </td>
                    <td> <a href="/project/EditProject/<%= item.projectid %>" class="btn btn-success">Edit</a>
                        <a href="/project/DeleteProject/<%= item.projectid %>" class="btn btn-danger" onclick="delClick()">Delete</a>
                    </td>

                </tr>
                <% }) %>
        </table>
        <div class="row my-3">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <a href="/project/AddProject" class='btn btn-primary'>Add</a>
            </div>
        </div>

    </form>

<script>
    function delClick() {
        confirm('Are you sure?')
    }
    
</script>

    <%- include('./partials/footer') %>