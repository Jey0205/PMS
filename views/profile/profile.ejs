<%- include('../partials/header') %>
    <div class="row mb-3 border-bottom">
        <h2 style="font-family: monospace;"> Profile </h2>
    </div>

    <form action="" method="GET" class="">
        <input type="hidden" name="page" value="1">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <label for="E-mail">E-mail</label>
            </div>
            <div class="col-sm-8">
                <input class="form-control" readonly type="email" aria-label="default input example"
                    name="proMail" value="<%= email.email %>">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <label for="position">Position
            </div>
            <div class="col-sm-8">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="manager" id="manager">
                    <label class="form-check-label" for="manager">
                        Manager
                    </label>
                </div>
                <div class="col-sm-8">
                    <input class="form-check-input" type="radio" name="softwareDev" id="softwareDev">
                    <label class="form-check-label" for="softwareDev">
                        Software Developer
                    </label>
                </div>
                <input class="form-check-input" type="radio" name="qualityAs" id="qualityAs">
                <label class="form-check-label" for="qualityAs">
                    Quality Assurance
                </label>
            </div>
        </div>
        <div class="row my-3">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <label for="type">Type</label>
            </div>
            <div class="col-sm-8">
                <input class="form-check-input" type="checkbox"
                    aria-label="default input example" name="typeFt"> Fulltime
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-1"></div>
            <div class="col-sm-1">
                <input class="btn btn-outline-primary" type="submit" value="Update">
            </div>
            <div class="col-sm-2">
                <a href="/profile/password" class="btn btn-outline-danger">Change Password</a>
            </div>
        </div>
    </form>


    <%- include('../partials/footer') %>